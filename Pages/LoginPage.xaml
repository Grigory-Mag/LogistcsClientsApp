                <StackPanel Orientation="Horizontal"
                            Name="ErrorStackPanel"
                            Grid.Row="1"
                            HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Warning"
                                             Foreground="{StaticResource AccentCustomColor}"
                                             Width="70"
                                             Height="70"
                                             Margin="0,0,30,0" />
                    <TextBlock FontSize="20"
                               Name="ErrorTextBlock"
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentCustomColor}"
                               MaxWidth="280"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Text="invalid login or password. please, verify your data"
                               Typography.Capitals="SmallCaps"
                               Margin="0,0,0,20" />
                </StackPanel>



                <TextBox Width="400"
                         Grid.Row="2"
                         Height="60"
                         Name="LoginTextBox"
                         TextChanged="LoginTextBox_TextChanged"
                         FontSize="18"
                         Margin="0,10,0,30"
                         materialDesign:HintAssist.HelperTextFontSize="14"
                         materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                         materialDesign:HintAssist.Hint="Login"
                         IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <PasswordBox Width="400"
                             Grid.Row="3"
                             Height="60"
                             PasswordChanged="PasswordTextBox_PasswordChanged"
                             Name="PasswordTextBox"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                             FontSize="18"
                             materialDesign:HintAssist.Hint="Password"
                             IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                             Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}" />
                <ComboBox Grid.Row="4"
                          x:Name="RoleComboBox"
                          Width="200"
                          Margin="0,30,0,0"
                          FontSize="18"
                          materialDesign:HintAssist.Hint="Role"
                          IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"
                          Style="{StaticResource MaterialDesignFilledComboBox}">
                </ComboBox>
                <TextBlock FontSize="18"
                           Margin="0,30,0,0"
                           Grid.Row="5"
                           TextAlignment="Left"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}">
                                <Run Text="" />
                </TextBlock>
                <Button Grid.Row="5"
                        x:Name="LoginButton"
                        Click="LoginButton_Click"
                        Height="40"
                        Content="login"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,30,0,30"
                        FontSize="22"
                        Typography.Capitals="SmallCaps"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Foreground="White"
                        Cursor="Hand" />
            </Grid>

        </materialDesign:Card>
    </Grid>
</Page>
