<Page x:Class="LogisticsClientsApp.Pages.TablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      xmlns:local="clr-namespace:LogisticsClientsApp.Pages"
      Height="900"
      Width="1200"
      mc:Ignorable="d"
      Title="TablePage">
    <Page.Resources>
        <Color x:Key="PrimaryColor">#2196f3</Color>
        <Storyboard x:Key="OpenMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                From="-300,0,0,0"
                                To="0,0,0,0"
                                DecelerationRatio="0.5"
                                Duration="0:0:0.5" />
        </Storyboard>


        <Storyboard x:Key="CloseMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                From="0,0,0,0"
                                To="-300,0,0,0"
                                DecelerationRatio="0.5"
                                Duration="0:0:0.5" />
        </Storyboard>

        <SolidColorBrush x:Key="Transparent"
                         Color="#00b0f0"
                         Opacity="0" />
    </Page.Resources>

    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>


        <Grid Grid.Column="1"
              Grid.Row="0"
              HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>
            <StackPanel>
                <materialDesign:Card Padding="32"
                                     Grid.Column="2"
                                     Margin="16">
                    <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}">My First Material Design App</TextBlock>
                </materialDesign:Card>

                <DataGrid x:Name="phonesGrid"
                          Width="Auto"
                          FontSize="16"
                          Background="RoyalBlue"
                          ItemsSource="{Binding Source=objects}"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id"
                                            Width="Auto"
                                            Binding="{Binding Id}" />
                        <DataGridTextColumn Header="Type"
                                            Width="Auto"
                                            Binding="{Binding Type}" />
                        <DataGridTextColumn Header="Constraints"
                                            Width="Auto"
                                            Binding="{Binding Constraints}" />
                        <DataGridTextColumn Header="Weight"
                                            Width="Auto"
                                            Binding="{Binding Weight}" />
                        <DataGridTextColumn Header="Volume"
                                            Width="Auto"
                                            Binding="{Binding Volume}" />
                        <DataGridTextColumn Header="Name"
                                            Width="Auto"
                                            Binding="{Binding Name}" />
                        <DataGridTextColumn Header="Price"
                                            Width="Auto"
                                            Binding="{Binding Price}" />
                        <DataGridCheckBoxColumn Header="Test" />
                    </DataGrid.Columns>


                </DataGrid>


            </StackPanel>
        </Grid>


        <Button x:Name="button"
                Style="{StaticResource AddButton}"
                FontFamily="{DynamicResource MaterialDesignFont}"
                Margin="220,359,0,0"
                VerticalAlignment="Top"
                Click="button_Click"
                Height="55"
                Width="180"
                Grid.ColumnSpan="2">
            <TextBlock Text="Add new record"
                       FontSize="18"
                       FontStyle="Normal" />
        </Button>


        <ToggleButton Name="ToggleDarkMode"
                      Checked="ToggleDarkMode_Checked"
                      Unchecked="ToggleDarkMode_Unchecked" />

        <Button Width="180"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                materialDesign:ColorZoneAssist.Mode="SecondaryDark"
                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                Margin="200,479,160,279"
                Click="Button_Click_1"
                Grid.Column="1">
            <StackPanel>
                <TextBlock Text="add new record"
                           Typography.Capitals="SmallCaps"
                           FontSize="18"
                           FontStyle="Normal" />
                <materialDesign:PackIcon Kind="Plus"
                                         Margin="-20,-18,0,0" />
            </StackPanel>
        </Button>

        <StackPanel Grid.Row="1">
            <Button Width="Auto"
                    Height="Auto"
                    HorizontalAlignment="Center"
                    Content="DARK"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="MaterialDesignOutlinedButton" />
        </StackPanel>





    </Grid>
</Page>
