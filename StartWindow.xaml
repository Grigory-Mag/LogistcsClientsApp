                        <!-- ACCOUNT INFO BLOCK -->

                        <StackPanel HorizontalAlignment="Center">
                            <WrapPanel>
                                <WrapPanel.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Padding"
                                                Value="0,10" />
                                    </Style>
                                </WrapPanel.Resources>
                                <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                           Text="Name"
                                           Padding="0,10" />
                                <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                           Text="Surname"
                                           Padding="5,10" />
                            </WrapPanel>

                            <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                       Text="Role"
                                       HorizontalAlignment="Center"
                                       Padding="0" />


                        </StackPanel>

                        <!-- ### ACCOUNT INFO BLOCK ###  -->

                        <!-- DIVIDER -->

                        <Rectangle Fill="#74D8FF"
                                   Height="5"
                                   RadiusX="2"
                                   RadiusY="2"
                                   Margin="10" />

                        <!-- ### DIVIDER ### -->

                        <Button Name="ReferencesBtn"
                                Click="ReferencesBtn_Click"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                ToolTip="References"
                                HorizontalAlignment="Stretch"
                                Margin="0,5"
                                Height="50"
                                VerticalAlignment="Top">
                            <StackPanel HorizontalAlignment="Left"
                                        VerticalAlignment="Top">
                                <TextBlock Text="References"
                                           Name="TextBlockReferences"
                                           Width="150"
                                           Typography.Capitals="Normal"
                                           FontSize="24"
                                           FontStyle="Normal"
                                           Margin="30,0,0,0" />
                                <materialDesign:PackIcon Width="32"
                                                         Height="27"
                                                         Name="ReferencesIcon"
                                                         Kind="LibraryBookmarkOutline"
                                                         Margin="-5,-25,0,0" />
                            </StackPanel>
                        </Button>

                        <Button Name="MessagesBtn"
                                Click="MessagesBtn_Click"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                ToolTip="Messages"
                                HorizontalAlignment="Stretch"
                                Height="50"
                                Margin="{StaticResource MenuSpacing}"
                                VerticalAlignment="Top">
                            <StackPanel HorizontalAlignment="Left"
                                        VerticalAlignment="Top">
                                <TextBlock Text="Messages"
                                           Width="150"
                                           Typography.Capitals="Normal"
                                           Name="TextBlockMessages"
                                           FontSize="24"
                                           FontStyle="Normal"
                                           Margin="30,0,0,0" />
                                <materialDesign:PackIcon Width="32"
                                                         Height="27"
                                                         Name="MessagesIcon"
                                                         Kind="MessageTextOutline"
                                                         Margin="-5,-25,0,0" />
                            </StackPanel>
                        </Button>

                        <Button materialDesign:ButtonAssist.CornerRadius="10"
                                Click="EmailBtn_Click"
                                Name="EmailBtn"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                ToolTip="Email"
                                HorizontalAlignment="Stretch"
                                Height="50"
                                Margin="{StaticResource MenuSpacing}"
                                VerticalAlignment="Top">
                            <StackPanel HorizontalAlignment="Left"
                                        VerticalAlignment="Top">
                                <TextBlock Text="Email"
                                           Width="150"
                                           Name="TextBlockEmail"
                                           Typography.Capitals="Normal"
                                           FontSize="24"
                                           FontStyle="Normal"
                                           Margin="30,0,0,0" />
                                <materialDesign:PackIcon Width="32"
                                                         Name="EmailIcon"
                                                         Height="27"
                                                         Kind="EmailOutline"
                                                         Margin="-5,-26,0,0" />
                            </StackPanel>
                        </Button>

                        <Button materialDesign:ButtonAssist.CornerRadius="10"
                                Click="AccountBtn_Click"
                                Name="AccountBtn"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                ToolTip="Messages"
                                HorizontalAlignment="Stretch"
                                Height="50"
                                Margin="{StaticResource MenuSpacing}"
                                VerticalAlignment="Top">
                            <StackPanel HorizontalAlignment="Left"
                                        VerticalAlignment="Top">
                                <TextBlock Text="Account"
                                           Name="TextBlockAccount"
                                           Width="150"
                                           Typography.Capitals="Normal"
                                           FontSize="24"
                                           FontStyle="Normal"
                                           Margin="30,0,0,0" />
                                <materialDesign:PackIcon Width="32"
                                                         Height="27"
                                                         Name="AccountIcon"
                                                         Kind="AccountOutline"
                                                         Margin="-5,-27,0,0" />
                            </StackPanel>
                        </Button>

                        <!-- LOWER DIVIDER -->

                        <Rectangle Fill="#74D8FF"
                                   Height="5"
                                   RadiusX="2"
                                   RadiusY="2"
                                   Margin="10,20,10,10" />

                        <!-- ### LOWER DIVIDER ### -->

                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                       Text="Some text"
                                       Margin="0,10" />
                            <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                       HorizontalAlignment="Center"
                                       Text="B.3"
                                       Margin="0,0" />
                        </StackPanel>

                    </StackPanel>



                    <!-- LOGOUT BUTTON -->
                    <Button materialDesign:ButtonAssist.CornerRadius="15, 15, 0, 0"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                            ToolTip="Close"
                            Grid.Row="1"
                            Height="50"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <StackPanel Width="Auto"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top">
                            <TextBlock Text="Logout"
                                       Typography.Capitals="Normal"
                                       FontSize="24"
                                       Name="TextBlockLogout"
                                       FontStyle="Normal"
                                       HorizontalAlignment="Left"
                                       Margin="30,0,0,0"
                                       FontWeight="Normal" />
                            <materialDesign:PackIcon Width="28"
                                                     Height="25"
                                                     Kind="Logout"
                                                     
                                                     Margin="0,-28,0,0" />
                        </StackPanel>
                    </Button>



                    <!-- ### LOGOUT BUTTON ### -->

                </Grid>
            </materialDesign:Card>

            <!-- SIDE MENU PANEL -->

            <StackPanel Orientation="Vertical">
                <Grid Margin="-5,0,0,0">
                    <Button x:Name="MenuOpenBtn"
                            Click="MenuOpenBtn_Click"
                            Width="60"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Height="50"
                            BorderThickness="0"
                            ToolTip="Open Menu"
                            Cursor="Hand">
                        <materialDesign:PackIcon Foreground="{StaticResource PrimaryCustomColor}"
                                                 Margin="-13,0,0,0"
                                                 Width="50"
                                                 Height="45"
                                                 Kind="Menu" />
                    </Button>

                    <Button x:Name="MenuCloseBtn"
                            Visibility="Hidden"
                            Click="MenuCloseBtn_Click"
                            Width="60"
                            Height="50"
                            BorderThickness="0"
                            ToolTip="Open Menu">
                        <materialDesign:PackIcon Foreground="White"
                                                 Margin="-13,0,0,0"
                                                 Width="50"
                                                 Height="45"
                                                 Kind="MenuOpen" />
                    </Button>

                </Grid>


                <StackPanel Margin="0,270">
                    <Menu Margin="0,-25"
                          Width="0"
                          Height="0">
                        <MenuItem Name="Sanyok">
                            <MenuItem Header="New"></MenuItem>
                            <MenuItem Header="Open"></MenuItem>
                            <MenuItem Header="Save"></MenuItem>
                            <MenuItem Header="SaveAs..."></MenuItem>
                            <Separator></Separator>
                            <MenuItem Header="Exit"></MenuItem>
                        </MenuItem>
                    </Menu>
                    <Button Name="MenuReferencesBtn"
                            Click="ReferencesBtn_Click"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="References"
                            HorizontalAlignment="Stretch"
                            Height="60"
                            VerticalAlignment="Top">
                        <StackPanel HorizontalAlignment="Left"
                                    VerticalAlignment="Top">
                            <materialDesign:PackIcon Width="38"
                                                     Height="35"
                                                     Name="MenuReferencesIcon"
                                                     Kind="LibraryBookmarkOutline"
                                                     Margin="-5,0,0,0" />
                        </StackPanel>
                    </Button>
                    



                    <Button Name="MenuMessagesBtn"
                            Click="MessagesBtn_Click"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="References"
                            HorizontalAlignment="Stretch"
                            Margin="{StaticResource MenuSpacing}"
                            Height="60"
                            VerticalAlignment="Top">
                        <StackPanel HorizontalAlignment="Left"
                                    VerticalAlignment="Top">
                            <materialDesign:PackIcon Width="38"
                                                     Height="35"
                                                     Name="MenuMessagesIcon"
                                                     Kind="MessageTextOutline"
                                                     Margin="-5,0,0,0" />
                        </StackPanel>
                    </Button>

                    <Button Name="MenuEmailBtn"
                            Click="EmailBtn_Click"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="References"
                            HorizontalAlignment="Stretch"
                            Margin="{StaticResource MenuSpacing}"
                            Height="60"
                            VerticalAlignment="Top">
                        <StackPanel HorizontalAlignment="Left"
                                    VerticalAlignment="Top">
                            <materialDesign:PackIcon Width="38"
                                                     Height="35"
                                                     Name="MenuEmailIcon"
                                                     Kind="EmailOutline"
                                                     Margin="-5,0,0,0" />
                        </StackPanel>
                    </Button>

                    <Button Name="MenuAccountBtn"
                            Click="AccountBtn_Click"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="References"
                            HorizontalAlignment="Stretch"
                            Margin="{StaticResource MenuSpacing}"
                            Height="60"
                            VerticalAlignment="Top">
                        <StackPanel HorizontalAlignment="Left"
                                    VerticalAlignment="Top">
                            <materialDesign:PackIcon Width="38"
                                                     Height="35"
                                                     Name="MenuAccountIcon"
                                                     Kind="AccountOutline"
                                                     Margin="-5,0,0,0" />
                        </StackPanel>
                    </Button>
                </StackPanel>

            </StackPanel>

            <!-- ### SIDE MENU PANEL ### -->
        </StackPanel>

        <!-- ### SIDE MENU ### -->

    </Grid>

</Window>
